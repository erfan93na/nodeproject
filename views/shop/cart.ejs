    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
         <% if (products.length>0)   {%>
            <ul>
                <% products.forEach(p=>{%>
                <li><p><%=p.productId.title%> (<%=p.quantity %>)</p><form action="/cart/delete-product" method="POST"><button>Delete item</button><input name="productId" hidden value="<%=p.productId._id %>"/><input name="price" hidden value="<%=p.price %>"/></form></li>
                <%}) %>
            </ul>
            <form action="/create-order" method="POST"> 
                <button type="submit" class="btn">Order Now</button>
            </form>
            <%}
         else {%><h1> No Products in Cart </h1><%}%>
        </main>
        <%- include('../includes/end.ejs') %>